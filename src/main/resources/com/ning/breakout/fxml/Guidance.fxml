<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="490.0" prefWidth="600.0" stylesheets="@../css/Guidance.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ning.breakout.controller.GuidanceController">
    <ImageView fitHeight="490.0" fitWidth="600.0" pickOnBounds="true">
        <Image url="@../image/background/guidance-bg.jpg" />
    </ImageView>
    <VBox layoutX="63.0" layoutY="94.0" prefHeight="336.0" prefWidth="512.0" spacing="20.0">
        <HBox prefHeight="70.0" prefWidth="496.0">
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                <HBox.margin>
                    <Insets bottom="10.0" left="30.0" right="10.0" top="10.0" />
                </HBox.margin>
                <Image url="@../image/keyboard/keyboard-left-key.png" />
            </ImageView>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
                <Image url="@../image/keyboard/keyboard-right-key.png" />
            </ImageView>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="73.0" prefWidth="346.0" text="Moves the paddle to left/right" />
        </HBox>
        <HBox prefHeight="58.0" prefWidth="496.0">
            <ImageView fitHeight="40.0" fitWidth="99.0" pickOnBounds="true">
                <HBox.margin>
                    <Insets bottom="10.0" left="40.0" right="10.0" top="10.0" />
                </HBox.margin>
                <Image url="@../image/keyboard/keyboard-space-key.png" />
            </ImageView>
            <Label alignment="CENTER" prefHeight="60.0" prefWidth="437.0" text="Stops/continues the game" />
        </HBox>
        <HBox prefHeight="81.0" prefWidth="496.0">
            <ImageView fitHeight="67.0" fitWidth="70.0" pickOnBounds="true">
                <HBox.margin>
                    <Insets bottom="10.0" left="45.0" right="10.0" top="10.0" />
                </HBox.margin>
                <Image url="@../image/keyboard/keyboard-esc-key.png" />
            </ImageView>
            <Label alignment="CENTER" prefHeight="112.0" prefWidth="386.0" text="Opens/closes the pause menu" />
        </HBox>
        <HBox prefHeight="40.0" prefWidth="496.0">
            <ImageView fitHeight="40.0" fitWidth="43.0" pickOnBounds="true">
                <HBox.margin>
                    <Insets bottom="10.0" left="5.0" right="10.0" top="10.0" />
                </HBox.margin>
                <Image url="@../image/keyboard/keyboard-shift-key.png" />
            </ImageView>
            <ImageView fitHeight="20.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                <HBox.margin>
                    <Insets right="2.0" top="22.0" />
                </HBox.margin>
                <Image url="@../image/keyboard/plus-icon.png" />
            </ImageView>
            <ImageView fitHeight="49.0" fitWidth="48.0" pickOnBounds="true">
                <HBox.margin>
                    <Insets left="10.0" right="10.0" top="6.0" />
                </HBox.margin>
                <Image url="@../image/keyboard/keyboard-alt-key.png" />
            </ImageView>
            <ImageView fitHeight="20.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                <HBox.margin>
                    <Insets left="5.0" top="22.0" />
                </HBox.margin>
                <Image url="@../image/keyboard/plus-icon.png" />
            </ImageView>
            <ImageView fitHeight="53.0" fitWidth="57.0" pickOnBounds="true">
                <HBox.margin>
                    <Insets top="6.0" />
                </HBox.margin>
                <Image url="@../image/keyboard/keyboard-f1-key.png" />
            </ImageView>
            <Label alignment="CENTER" prefHeight="60.0" prefWidth="305.0" text="Opens the debug console" />
        </HBox>
    </VBox>
    <Button fx:id="m_BackButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onMouseClicked="#backToMain" prefHeight="44.0" prefWidth="110.0" text="BACK">
        <cursor>
          <Cursor fx:constant="HAND" />
        </cursor>
    </Button>
</AnchorPane>
